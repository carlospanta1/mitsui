{
	"name": "PIPELINE GENERAL",
	"properties": {
		"activities": [
			{
				"name": "LP_OBTIENE_FECHA",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "@concat('SELECT \nSUBSTRING(CONVERT(VARCHAR,FECHA_DESDE,120),1,10) AS FECHA_DESDE\n,SUBSTRING(CONVERT(VARCHAR,FECHA_HASTA,120),1,10) AS FECHA_HASTA\n,SUBSTRING(CONVERT(VARCHAR,FECHA_HASTA,120),1,4) AS ANIO\n,SUBSTRING(CONVERT(VARCHAR,FECHA_HASTA,120),6,2) AS MES\n, CONVERT(BIGINT,REPLACE(SUBSTRING(CONVERT(VARCHAR,getdate(),120),1,10),''-'',''''))*1000000 AS TIMESTAMP\n\nFROM (SELECT \n',string(pipeline().parameters.Fecha_Desde), ' AS FECHA_DESDE ,\n',string(pipeline().parameters.Fecha_Hasta), ' AS FECHA_HASTA , \n',string(pipeline().parameters.Modulo) , ' AS MODULO from staging.dw_proceso) R' )",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "DWH_PROCESO",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "CARGA TRANSACCIONALES",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "LP_OBTIENE_FECHA",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "EXTRACCION_TRANSACCIONALES",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true
				}
			}
		],
		"parameters": {
			"Fecha_Desde": {
				"type": "string",
				"defaultValue": "dateadd(dd ,1 ,eomonth(getdate(),-1))"
			},
			"Fecha_Hasta": {
				"type": "string",
				"defaultValue": "dateadd(dd ,0 ,getdate())"
			},
			"Modulo": {
				"type": "string",
				"defaultValue": "'FACT'"
			}
		},
		"annotations": []
	}
}